@model Nursing_Ranker.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var firstName = ViewBag.User?.FirstName;
    var capitalizedFirstName = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(firstName?.ToLower() ?? string.Empty);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>Hello @capitalizedFirstName, Welcome to Your Dashboard</h2>

        <!-- Nav Pills -->
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab">Applicants</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab">Stats</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab">Reports</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-tab4-tab" data-bs-toggle="pill" data-bs-target="#pills-tab4" type="button" role="tab">Alerts</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-tab6-tab" data-bs-toggle="pill" data-bs-target="#pills-tab6" type="button" role="tab">Ranking</button>
            </li>
        </ul>

        <!-- Partial views -->
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel">
                @await Html.PartialAsync("_Applicants", Model.Applicants)
            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel">
                @await Html.PartialAsync("_Stats")
            </div>
            <div class="tab-pane fade" id="pills-contact" role="tabpanel">
                @await Html.PartialAsync("_Reports")
            </div>
            <div class="tab-pane fade" id="pills-tab4" role="tabpanel">
                @await Html.PartialAsync("_Alerts")
            </div>
            <div class="tab-pane fade" id="pills-tab6" role="tabpanel">
                @await Html.PartialAsync("_Ranking")
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>





