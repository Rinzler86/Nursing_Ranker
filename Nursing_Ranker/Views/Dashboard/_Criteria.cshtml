@{
    var placeholderCriteria = new List<dynamic>
    {
        new { Criterion = "GPA", Description = "Minimum GPA of 3.0" },
        new { Criterion = "Experience", Description = "At least 2 years of experience" },
        new { Criterion = "References", Description = "Two professional references" }
    };
}

<div>
    <h3>Criteria</h3>
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addCriterionModal">Add Criterion</button>
    <ul class="list-group">
        @foreach (var criterion in placeholderCriteria)
        {
            <li class="list-group-item">
                <strong>@criterion.Criterion</strong> - @criterion.Description
            </li>
        }
    </ul>
</div>

<!-- Add Criterion Modal -->
<div class="modal fade" id="addCriterionModal" tabindex="-1" aria-labelledby="addCriterionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCriterionModalLabel">Add Criterion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Add Criterion Form -->
                <form>
                    <div class="mb-3">
                        <label for="criterionName" class="form-label">Criterion</label>
                        <input type="text" class="form-control" id="criterionName">
                    </div>
                    <div class="mb-3">
                        <label for="criterionDescription" class="form-label">Description</label>
                        <input type="text" class="form-control" id="criterionDescription">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
